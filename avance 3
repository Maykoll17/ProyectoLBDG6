ALTER TABLE FIDE_ESTADOS_PACIENTES_TB RENAME COLUMN estado TO
FIDE_DESCRIPCION_ESTADO_PACIENTE;
-- Tabla de Pacientes
ALTER TABLE pacientes RENAME TO FIDE_PACIENTES_TB;
