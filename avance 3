ALTER TABLE FIDE_DETALLES_FACTURAS_TB RENAME COLUMN factura_id TO FIDE_FACTURA_ID;
ALTER TABLE FIDE_DETALLES_FACTURAS_TB RENAME COLUMN descripcion TO FIDE_DESCRIPCION_FACTURA;
